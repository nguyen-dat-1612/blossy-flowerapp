<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="120dp"
    android:layout_marginVertical="8dp"
    android:background="#F8F9FA"
    android:padding="8dp">


    <ImageView
        android:id="@+id/imageView"
        android:layout_width="87dp"
        android:layout_height="87dp"
        android:padding="8dp"
        android:background="@drawable/item_product_background"
        tools:srcCompat="@tools:sample/avatars"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"/>

    <TextView
        android:id="@+id/nameText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="101 red roses"
        android:textSize="16sp"
        android:fontFamily="@font/poppins_regular"
        android:layout_marginStart="16dp"
        app:layout_constraintStart_toEndOf="@id/imageView"
        app:layout_constraintTop_toTopOf="@id/imageView"/>

<!--    <TextView-->
<!--        android:id="@+id/stockText"-->
<!--        android:layout_width="wrap_content"-->
<!--        android:layout_height="wrap_content"-->
<!--        android:text="Available in stock"-->
<!--        android:textSize="12sp"-->
<!--        android:fontFamily="@font/poppins_regular"-->
<!--        android:layout_marginTop="8dp"-->
<!--        android:textColor="@color/green_dark"-->
<!--        app:layout_constraintTop_toTopOf="parent"-->
<!--        app:layout_constraintEnd_toEndOf="parent"/>-->

    <!-- Price -->
    <TextView
        android:id="@+id/priceText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="$50.00"
        android:textSize="14sp"
        android:fontFamily="@font/poppins_bold"
        android:textColor="@color/pink_primary"
        android:layout_marginTop="4dp"
        app:layout_constraintTop_toBottomOf="@id/nameText"
        app:layout_constraintStart_toStartOf="@id/nameText" />

    <ImageView
        android:id="@+id/deleteButton"
        android:layout_width="24dp"
        android:layout_height="24dp"
        android:src="@drawable/ic_trash"
        app:tint="@color/pink_primary"
        app:layout_constraintBottom_toBottomOf="@id/imageView"
        app:layout_constraintEnd_toEndOf="parent"/>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="34dp"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        app:layout_constraintTop_toBottomOf="@id/priceText"
        app:layout_constraintStart_toStartOf="@id/priceText">

        <ImageButton
            android:id="@+id/minusQuantityButton"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:backgroundTint="@color/gray_light"
            android:background="@drawable/bg_circle_button"
            android:src="@drawable/ic_minus"
            app:tint="@color/pink_primary"
            android:padding="2dp"
            android:scaleType="centerInside"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintEnd_toEndOf="parent"/>

        <TextView
            android:id="@+id/quantityText"
            android:layout_width="wrap_content"
            android:layout_height="20dp"
            android:text="1"
            android:textSize="14sp"
            android:gravity="center_horizontal"
            android:paddingHorizontal="18dp"
            android:fontFamily="@font/merriweather_regular"/>

        <ImageButton
            android:id="@+id/addQuantityButton"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:backgroundTint="@color/pink_primary"
            android:background="@drawable/bg_circle_button"
            android:src="@drawable/ic_add"
            android:padding="2dp"
            app:tint="@color/white"
            android:scaleType="centerInside"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintEnd_toEndOf="parent"/>
    </LinearLayout>




</androidx.constraintlayout.widget.ConstraintLayout>