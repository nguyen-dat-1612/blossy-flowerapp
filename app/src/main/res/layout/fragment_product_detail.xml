<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <data>
        <variable
            name="product"
            type="com.blossy.flowerstore.domain.model.Product" />
    </data>

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/white"
        tools:context=".presentation.productDetail.ui.ProductDetailFragment">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <!-- ScrollView for main content -->
            <ScrollView
                android:id="@+id/scrollView"
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:fillViewport="true"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintBottom_toTopOf="@id/bottomBar">

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <!-- Header: Avatar, Greeting, Notification -->
                    <androidx.constraintlayout.widget.ConstraintLayout
                        android:id="@+id/header"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="10dp"
                        android:layout_marginEnd="10dp"
                        android:layout_marginTop="59dp"
                        android:padding="8dp"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintEnd_toEndOf="parent">

                        <!-- Brand -->
                        <TextView
                            android:id="@+id/brandText"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Product Details"
                            android:fontFamily="@font/poppins_bold"
                            android:textSize="20sp"
                            android:textColor="@color/black"
                            app:layout_constraintTop_toTopOf="@id/btnBack"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintEnd_toEndOf="parent"
                            app:layout_constraintBottom_toBottomOf="@id/btnBack"/>

                        <ImageButton
                            android:id="@+id/btnBack"
                            android:layout_width="44dp"
                            android:layout_height="44dp"
                            android:src="@drawable/ic_left"
                            android:background="@drawable/bg_circle_button"
                            app:tint="@color/primary"
                            android:padding="12dp"
                            android:scaleType="centerInside"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toTopOf="parent"
                            app:layout_constraintBottom_toBottomOf="parent" />

                        <ImageButton
                            android:id="@+id/cartBtn"
                            android:layout_width="44dp"
                            android:layout_height="44dp"
                            android:scaleType="fitXY"
                            android:padding="5dp"
                            android:src="@drawable/ic_add_cart"
                            android:background="@drawable/bg_circle_button"
                            app:tint="@color/primary"
                            app:layout_constraintEnd_toEndOf="parent"
                            app:layout_constraintTop_toTopOf="parent"
                            app:layout_constraintBottom_toBottomOf="parent" />

                    </androidx.constraintlayout.widget.ConstraintLayout>

                    <RelativeLayout
                        android:id="@+id/imagesLayout"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        app:layout_constraintTop_toBottomOf="@id/header">

                        <!-- ViewPager2 để lướt ảnh -->
                        <androidx.viewpager2.widget.ViewPager2
                            android:id="@+id/viewPager"
                            android:layout_width="300dp"
                            android:layout_height="300dp"
                            android:layout_centerInParent="true" />

                        <com.tbuonomo.viewpagerdotsindicator.DotsIndicator
                            android:id="@+id/dots_indicator"
                            android:layout_width="wrap_content"
                            android:layout_height="8dp"
                            app:dotsSize="8dp"
                            app:dotsColor="@color/grey_dark"
                            app:selectedDotColor="@color/black"
                            android:layout_below="@id/viewPager"
                            android:layout_centerHorizontal="true"
                            android:layout_marginTop="38dp" />

                        <ImageButton
                            android:id="@+id/btnFavorite"
                            android:layout_width="48dp"
                            android:layout_height="48dp"
                            android:padding="20dp"
                            android:layout_alignParentEnd="true"
                            android:layout_margin="16dp"
                            android:src="@drawable/ic_favorite_border"
                            android:backgroundTint="@android:color/transparent"/>
                    </RelativeLayout>

                    <androidx.constraintlayout.widget.ConstraintLayout
                        android:id="@+id/productDetails"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="16dp"
                        android:layout_marginEnd="16dp"
                        android:layout_marginTop="16dp"
                        android:padding="16dp"
                        app:layout_constraintTop_toBottomOf="@id/imagesLayout"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintEnd_toEndOf="parent">

                        <TextView
                            android:id="@+id/nameProduct"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/poppins_bold"
                            android:textColor="@color/primary"
                            android:textSize="24sp"
                            android:text="Name"
                            android:layout_marginTop="8dp"
                            app:layout_constraintTop_toTopOf="parent"
                            app:layout_constraintStart_toStartOf="parent" />

                        <!-- Price Row -->
                        <TextView
                            android:id="@+id/priceProduct"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textStyle="bold"
                            android:textColor="@color/primary"
                            android:textSize="20sp"
                            android:text="1.000.000 VND"
                            android:layout_marginTop="8dp"
                            app:layout_constraintTop_toBottomOf="@id/nameProduct"
                            app:layout_constraintStart_toStartOf="parent" />

                        <!-- Rating and Reviews Row -->
                        <RatingBar
                            android:id="@+id/ratingBar"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:numStars="5"
                            android:stepSize="0.5"
                            android:layout_marginTop="8dp"
                            android:progressTint="@android:color/holo_orange_light"
                            style="@style/Widget.AppCompat.RatingBar.Small"
                            app:layout_constraintTop_toTopOf="@id/priceProduct"
                            app:layout_constraintEnd_toStartOf="@id/reviews" />

                        <TextView
                            android:id="@+id/reviews"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/poppins_regular"
                            android:textColor="@color/grey_dark"
                            android:textSize="12sp"
                            android:layout_marginStart="8dp"
                            app:layout_constraintEnd_toEndOf="parent"
                            app:layout_constraintTop_toTopOf="@id/ratingBar"
                            app:layout_constraintBottom_toBottomOf="@id/ratingBar" />

                        <View
                            android:id="@+id/divider3"
                            android:layout_width="match_parent"
                            android:layout_height="1dp"
                            android:background="@color/grey_light"
                            android:layout_marginTop="8dp"
                            app:layout_constraintTop_toBottomOf="@id/priceProduct" />

                        <!-- Description Row -->
                        <TextView
                            android:id="@+id/descriptionTitle"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Description"
                            android:fontFamily="@font/poppins_bold"
                            android:textColor="@color/primary"
                            android:textSize="16sp"
                            android:layout_marginTop="8dp"
                            app:layout_constraintTop_toBottomOf="@id/divider3"
                            app:layout_constraintStart_toStartOf="parent" />

                        <TextView
                            android:id="@+id/descriptionProduct"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:text="@{product.description}"
                            android:fontFamily="@font/poppins_regular"
                            android:textColor="@color/black"
                            android:textSize="14sp"
                            android:maxLines="3"
                            android:ellipsize="end"
                            android:layout_marginTop="8dp"
                            app:layout_constraintTop_toBottomOf="@id/descriptionTitle"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintEnd_toEndOf="parent" />

                        <TextView
                            android:id="@+id/readMore"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Read More"
                            android:fontFamily="@font/poppins_regular"
                            android:textColor="@color/primary"
                            android:textSize="14sp"
                            android:paddingStart="16dp"
                            android:paddingEnd="16dp"
                            android:paddingTop="2dp"
                            android:paddingBottom="2dp"
                            android:background="@drawable/rounded_background"
                            android:layout_marginTop="4dp"
                            app:layout_constraintTop_toBottomOf="@id/descriptionProduct"
                            app:layout_constraintStart_toStartOf="parent" />

                        <View
                            android:id="@+id/divider5"
                            android:layout_width="match_parent"
                            android:layout_height="1dp"
                            android:background="@color/grey_light"
                            android:layout_marginTop="8dp"
                            app:layout_constraintTop_toBottomOf="@id/readMore" />

                        <TextView
                            android:id="@+id/quantityLabel"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Quantity"
                            android:textColor="@color/black"
                            android:layout_marginTop="16dp"
                            android:textSize="16sp"
                            android:fontFamily="@font/poppins_bold"
                            app:layout_constraintTop_toBottomOf="@id/divider5"
                            app:layout_constraintStart_toStartOf="parent" />

                        <LinearLayout
                            android:layout_width="137dp"
                            android:layout_height="32dp"
                            android:orientation="horizontal"
                            android:background="@drawable/bg_button_quantity"
                            android:gravity="center_vertical"
                            app:layout_constraintTop_toTopOf="@id/quantityLabel"
                            app:layout_constraintEnd_toEndOf="parent"
                            app:layout_constraintBottom_toBottomOf="@id/quantityLabel">

                            <ImageButton
                                android:id="@+id/minusQuantityButton"
                                android:layout_width="24dp"
                                android:layout_height="24dp"
                                android:src="@drawable/ic_minus"
                                app:tint="@color/black"
                                android:layout_marginStart="8dp"
                                android:background="@color/transparent"
                                app:layout_constraintTop_toTopOf="parent"
                                app:layout_constraintEnd_toEndOf="parent"/>

                            <TextView
                                android:id="@+id/quantityText"
                                android:layout_width="0dp"
                                android:layout_height="20dp"
                                android:text="1"
                                android:layout_weight="1"
                                android:textSize="16sp"
                                android:gravity="center_horizontal"
                                android:paddingHorizontal="18dp"
                                android:fontFamily="@font/poppins_medium"/>

                            <ImageButton
                                android:id="@+id/addQuantityButton"
                                android:layout_width="24dp"
                                android:layout_height="24dp"
                                android:background="@color/transparent"
                                android:src="@drawable/ic_add"
                                android:layout_marginEnd="8dp"
                                android:layout_gravity="center"
                                app:tint="@color/black" />
                        </LinearLayout>

                        <View
                            android:id="@+id/divider6"
                            android:layout_width="match_parent"
                            android:layout_height="1dp"
                            android:background="@color/grey_light"
                            android:layout_marginTop="16dp"
                            app:layout_constraintTop_toBottomOf="@id/quantityLabel" />

                        <!-- Special Notes Row -->
                        <TextView
                            android:id="@+id/specialNotesTitle"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Special Notes"
                            android:fontFamily="@font/poppins_bold"
                            android:textColor="@color/primary"
                            android:textSize="16sp"
                            android:layout_marginTop="16dp"
                            app:layout_constraintTop_toBottomOf="@id/divider6"
                            app:layout_constraintStart_toStartOf="parent" />

                        <TextView
                            android:id="@+id/specialNotesContent"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:text="Handle with care to avoid damaging petals. Keep away from direct sunlight."
                            android:fontFamily="@font/poppins_regular"
                            android:textColor="@color/black"
                            android:textSize="14sp"
                            android:layout_marginTop="8dp"
                            app:layout_constraintTop_toBottomOf="@id/specialNotesTitle"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintEnd_toEndOf="parent" />

                        <View
                            android:id="@+id/divider7"
                            android:layout_width="match_parent"
                            android:layout_height="1dp"
                            android:background="@color/grey_light"
                            android:layout_marginTop="16dp"
                            app:layout_constraintTop_toBottomOf="@id/specialNotesContent" />

                        <!-- Usage Instructions Row -->
                        <TextView
                            android:id="@+id/usageInstructionsTitle"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Usage Instructions"
                            android:fontFamily="@font/poppins_bold"
                            android:textColor="@color/primary"
                            android:textSize="16sp"
                            android:layout_marginTop="16dp"
                            app:layout_constraintTop_toBottomOf="@id/divider7"
                            app:layout_constraintStart_toStartOf="parent" />

                        <TextView
                            android:id="@+id/usageInstructionsContent"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:text="Place in a vase with fresh water. Change water every 2 days."
                            android:fontFamily="@font/poppins_regular"
                            android:textColor="@color/black"
                            android:textSize="14sp"
                            android:layout_marginTop="8dp"
                            app:layout_constraintTop_toBottomOf="@id/usageInstructionsTitle"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintEnd_toEndOf="parent" />

                        <View
                            android:id="@+id/divider8"
                            android:layout_width="match_parent"
                            android:layout_height="1dp"
                            android:background="@color/grey_light"
                            android:layout_marginTop="16dp"
                            app:layout_constraintTop_toBottomOf="@id/usageInstructionsContent" />

                        <!-- Delivery Policy Row -->
                        <TextView
                            android:id="@+id/deliveryPolicyTitle"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Delivery Policy"
                            android:fontFamily="@font/poppins_bold"
                            android:textColor="@color/primary"
                            android:textSize="16sp"
                            android:layout_marginTop="8dp"
                            app:layout_constraintTop_toBottomOf="@id/divider8"
                            app:layout_constraintStart_toStartOf="parent" />

                        <TextView
                            android:id="@+id/deliveryPolicyContent"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:text="Delivered within 1-2 days. Free delivery for orders over $50."
                            android:fontFamily="@font/poppins_regular"
                            android:textColor="@color/black"
                            android:textSize="14sp"
                            android:layout_marginTop="8dp"
                            android:layout_marginBottom="16dp"
                            app:layout_constraintTop_toBottomOf="@id/deliveryPolicyTitle"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintEnd_toEndOf="parent" />

                    </androidx.constraintlayout.widget.ConstraintLayout>
                </androidx.constraintlayout.widget.ConstraintLayout>
            </ScrollView>

            <!-- Bottom Order Bar (Fixed at bottom) -->
            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/bottomBar"
                android:layout_width="match_parent"
                android:layout_height="94dp"
                android:background="@drawable/bg_bottom_nav"
                android:elevation="8dp"
                android:translationZ="8dp"
                app:layout_constraintBottom_toBottomOf="parent">

                <androidx.appcompat.widget.AppCompatButton
                    android:id="@+id/addToCartBtn"
                    android:layout_width="0dp"
                    android:layout_height="54dp"
                    android:text="Add to cart"
                    android:textAllCaps="false"
                    android:textColor="@android:color/white"
                    android:background="@drawable/bg_button_primary"
                    android:fontFamily="@font/poppins_bold"
                    android:layout_marginEnd="16dp"
                    android:layout_marginStart="16dp"
                    android:paddingStart="120dp"
                    android:paddingEnd="120dp"
                    android:textSize="18sp"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintBottom_toBottomOf="parent"/>

            </androidx.constraintlayout.widget.ConstraintLayout>

        </androidx.constraintlayout.widget.ConstraintLayout>
    </FrameLayout>
</layout>