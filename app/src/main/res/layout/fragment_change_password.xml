<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    tools:context=".presentation.account.ui.ChangePasswordFragment">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <!-- Header: Avatar, Greeting, Notification -->
        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/header"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            android:layout_marginEnd="10dp"
            android:layout_marginTop="59dp"
            android:padding="8dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent">

            <TextView
                android:id="@+id/titleText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Change Password"
                android:fontFamily="@font/poppins_bold"
                android:textSize="20sp"
                android:textColor="@color/black"
                app:layout_constraintTop_toTopOf="@id/btnBack"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintBottom_toBottomOf="@id/btnBack"/>

            <ImageButton
                android:id="@+id/btnBack"
                android:layout_width="44dp"
                android:layout_height="44dp"
                android:src="@drawable/ic_left"
                android:background="@drawable/bg_circle_button"
                app:tint="?attr/colorPrimary"
                android:padding="12dp"
                android:scaleType="centerInside"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent" />

        </androidx.constraintlayout.widget.ConstraintLayout>

        <!-- Current Password Section -->
        <!-- Current Password Section -->
        <TextView
            android:id="@+id/currentPasswordLabel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Current Password"
            android:textSize="16sp"
            android:fontFamily="@font/poppins_bold"
            android:textColor="@color/black"
            android:textStyle="bold"
            app:layout_constraintTop_toBottomOf="@id/header"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="18dp"
            android:layout_marginTop="24dp" />

        <RelativeLayout
            android:id="@+id/currentPasswordInputLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:layout_marginStart="18dp"
            android:layout_marginEnd="18dp"
            android:layout_marginTop="12dp"
            app:layout_constraintTop_toBottomOf="@id/currentPasswordLabel"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent">

            <EditText
                android:id="@+id/currentPasswordInput"
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:layout_weight="1"
                android:autofillHints="password"
                android:background="@drawable/bg_edittext_primary"
                android:hint="Current Password"
                android:inputType="textPassword"
                android:textColor="@color/black"
                android:textColorHint="@color/grey_dark"
                android:textSize="16sp" />

            <ImageView
                android:id="@+id/currentPasswordToggle"
                android:layout_width="32dp"
                android:layout_height="32dp"
                android:src="@drawable/ic_eye_off"
                android:layout_alignParentEnd="true"
                android:layout_centerVertical="true"
                android:contentDescription="Toggle password visibility"
                android:padding="4dp"
                android:layout_marginEnd="16dp"
                app:tint="@color/grey_dark" />

        </RelativeLayout>

        <TextView
            android:id="@+id/newPasswordLabel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="New Password"
            android:textSize="16sp"
            android:textStyle="bold"
            android:fontFamily="@font/poppins_bold"
            android:textColor="@color/black"
            app:layout_constraintTop_toBottomOf="@id/currentPasswordInputLayout"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="18dp"
            android:layout_marginTop="16dp" />

        <RelativeLayout
            android:id="@+id/newPasswordInputLayout"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:layout_marginStart="18dp"
            android:layout_marginEnd="18dp"
            android:layout_marginTop="12dp"
            app:layout_constraintTop_toBottomOf="@id/newPasswordLabel"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent">

            <EditText
                android:id="@+id/newPasswordInput"
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:layout_weight="1"
                android:hint="New Password"
                android:textSize="16sp"
                android:background="@drawable/bg_edittext_primary"
                android:textColorHint="@color/grey_dark"
                android:textColor="@color/black"
                android:inputType="textPassword" />

            <ImageView
                android:id="@+id/newPasswordToggle"
                android:layout_width="32dp"
                android:layout_height="32dp"
                android:src="@drawable/ic_eye_off"
                android:layout_alignParentEnd="true"
                android:layout_centerVertical="true"
                android:contentDescription="Toggle password visibility"
                android:padding="4dp"
                android:layout_marginEnd="16dp"
                app:tint="@color/grey_dark" />

        </RelativeLayout>

        <!-- Re-Type New Password Section -->
        <TextView
            android:id="@+id/reNewPasswordLabel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Confirm New Password"
            android:textSize="16sp"
            android:textStyle="bold"
            android:fontFamily="@font/poppins_bold"
            android:textColor="@color/black"
            app:layout_constraintTop_toBottomOf="@id/newPasswordInputLayout"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="18dp"
            android:layout_marginTop="16dp" />

        <RelativeLayout
            android:id="@+id/reNewPasswordInputLayout"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:layout_marginStart="18dp"
            android:layout_marginEnd="18dp"
            android:layout_marginTop="12dp"
            app:layout_constraintTop_toBottomOf="@id/reNewPasswordLabel"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent">

            <EditText
                android:id="@+id/reNewPasswordInput"
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:background="@drawable/bg_edittext_primary"
                android:hint="Confirm New Password"
                android:textColorHint="@color/grey_dark"
                android:textSize="16sp"
                android:textColor="@color/black"
                android:inputType="textPassword" />

            <ImageView
                android:id="@+id/reNewPasswordToggle"
                android:layout_width="32dp"
                android:layout_height="32dp"
                android:src="@drawable/ic_eye_off"
                android:contentDescription="Toggle password visibility"
                android:padding="4dp"
                android:layout_alignParentEnd="true"
                android:layout_centerVertical="true"
                android:layout_marginEnd="16dp"
                app:tint="@color/grey_dark" />

        </RelativeLayout>

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/changePasswordButton"
            android:layout_width="0dp"
            android:layout_height="54dp"
            android:text="Change Password"
            android:textSize="16sp"
            android:textAllCaps="false"
            android:textColor="@color/white"
            android:fontFamily="@font/poppins_bold"
            android:background="@drawable/bg_button_primary"
            android:backgroundTint="?attr/colorPrimary"
            android:layout_marginStart="18dp"
            android:layout_marginEnd="18dp"
            android:layout_marginTop="24dp"
            app:layout_constraintTop_toBottomOf="@id/reNewPasswordInputLayout"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent" />

    </androidx.constraintlayout.widget.ConstraintLayout>

    <include
        layout="@layout/view_progress_overlay"
        android:id="@+id/progressOverlay"/>
</FrameLayout>