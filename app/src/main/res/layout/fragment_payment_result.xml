<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    tools:context=".presentation.checkout.ui.PaymentResultFragment">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="24dp"
        android:layout_gravity="center">

        <!-- Lottie animation ở trên cùng -->
        <com.airbnb.lottie.LottieAnimationView
            android:id="@+id/successAnimationView"
            android:layout_width="200dp"
            android:layout_height="200dp"
            app:lottie_rawRes="@raw/success_animation"
            app:lottie_autoPlay="true"
            app:lottie_loop="false"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent" />

        <!-- Tiêu đề căn giữa màn -->
        <TextView
            android:id="@+id/titleTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Your order is successfully purchased"
            android:textSize="18sp"
            android:textColor="@color/black"
            android:fontFamily="@font/poppins_bold"
            app:layout_constraintTop_toBottomOf="@id/successAnimationView"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginTop="24dp" />

        <!-- Mô tả dưới tiêu đề -->
        <TextView
            android:id="@+id/descTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Your order is being prepared to be shipped to\nyou on time"
            android:textSize="14sp"
            android:fontFamily="@font/poppins_regular"
            android:textColor="@color/grey_dark"
            android:textAlignment="center"
            app:layout_constraintTop_toBottomOf="@id/titleTextView"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginTop="12dp" />

        <!-- Button Continue Shopping -->
        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/continueShoppingBtn"
            android:layout_width="0dp"
            android:layout_height="54dp"
            android:layout_marginTop="24dp"
            android:text="Continue Shopping"
            android:textAllCaps="false"
            android:textSize="16sp"
            android:fontFamily="@font/poppins_bold"
            android:textColor="@color/white"
            android:background="@drawable/bg_button_primary"
            app:layout_constraintTop_toBottomOf="@id/descTextView"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent" />

        <!-- Button Back to Home (Secondary) -->
        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/backHomeBtn"
            android:layout_width="0dp"
            android:layout_height="54dp"
            android:layout_marginTop="16dp"
            android:text="Back to Home"
            android:textAllCaps="false"
            android:textSize="16sp"
            android:fontFamily="@font/poppins_bold"
            android:textColor="?attr/colorPrimary"
            android:background="@drawable/bg_button_primary"
            android:backgroundTint="@color/white"
            app:layout_constraintTop_toBottomOf="@id/continueShoppingBtn"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginBottom="24dp" />
    </androidx.constraintlayout.widget.ConstraintLayout>
</FrameLayout>
