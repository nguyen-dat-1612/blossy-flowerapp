                <!-- Order Details -->
                <androidx.cardview.widget.CardView
                    android:id="@+id/orderDetailsCard"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="16dp"
                    android:layout_marginEnd="16dp"
                    android:layout_marginTop="16dp"
                    app:cardCornerRadius="8dp"
                    app:cardElevation="2dp"
                    app:cardBackgroundColor="@color/white"
                    app:layout_constraintTop_toBottomOf="@id/totalCard"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent">

                    <androidx.constraintlayout.widget.ConstraintLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:padding="16dp">

                        <!-- Order ID -->
                        <TextView
                            android:id="@+id/orderIdLabel"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Order ID"
                            android:fontFamily="@font/poppins_bold"
                            android:textSize="16sp"
                            android:textColor="@color/text_primary"
                            app:layout_constraintTop_toTopOf="parent"
                            app:layout_constraintStart_toStartOf="parent" />

                        <TextView
                            android:id="@+id/orderId"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="25050663267BG0"
                            android:fontFamily="@font/poppins_regular"
                            android:textSize="14sp"
                            android:layout_marginTop="6dp"
                            android:textColor="@color/text_primary"
                            android:layout_marginEnd="20dp"
                            app:layout_constraintStart_toStartOf="@id/orderIdLabel"
                            app:layout_constraintTop_toBottomOf="@id/orderIdLabel"/>

                        <TextView
                            android:id="@+id/copyButton"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Copy"
                            android:paddingTop="2dp"
                            android:paddingBottom="2dp"
                            android:paddingStart="8dp"
                            android:paddingEnd="8dp"
                            android:background="@drawable/rounded_background"
                            android:textColor="@color/primary"
                            android:fontFamily="@font/poppins_regular"
                            android:textSize="12sp"
                            app:layout_constraintTop_toTopOf="@id/orderIdLabel"
                            app:layout_constraintEnd_toEndOf="parent"
                            app:layout_constraintBottom_toBottomOf="@id/orderIdLabel"/>

                        <!-- Payment Method -->
                        <TextView
                            android:id="@+id/paymentMethodLabel"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Payment Method:"
                            android:fontFamily="@font/poppins_bold"
                            android:textSize="14sp"
                            android:textColor="@color/text_primary"
                            android:layout_marginTop="12dp"
                            app:layout_constraintTop_toBottomOf="@id/orderId"
                            app:layout_constraintStart_toStartOf="parent" />

                        <TextView
                            android:id="@+id/paymentMethod"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="COD"
                            android:fontFamily="@font/poppins_regular"
                            android:textSize="14sp"
                            android:textColor="@color/text_primary"
                            android:layout_marginStart="8dp"
                            app:layout_constraintTop_toTopOf="@id/paymentMethodLabel"
                            app:layout_constraintEnd_toEndOf="parent" />

                        <!-- Order Time -->
                        <TextView
                            android:id="@+id/orderTimeLabel"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Order Time:"
                            android:fontFamily="@font/poppins_bold"
                            android:textSize="14sp"
                            android:textColor="@color/text_primary"
                            android:layout_marginTop="8dp"
                            app:layout_constraintTop_toBottomOf="@id/paymentMethod"
                            app:layout_constraintStart_toStartOf="parent" />

                        <TextView
                            android:id="@+id/orderTime"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="2025-05-11 13:00"
                            android:fontFamily="@font/poppins_regular"
                            android:textSize="14sp"
                            android:textColor="@color/text_primary"
                            android:layout_marginStart="8dp"
                            app:layout_constraintTop_toTopOf="@id/orderTimeLabel"
                            app:layout_constraintEnd_toEndOf="parent" />

