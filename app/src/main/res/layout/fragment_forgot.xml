<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/white"
    tools:context=".presentation.auth.ui.ForgotFragment">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="45dp"
        android:layout_marginStart="18dp"
        android:layout_marginEnd="18dp">

        <ImageButton
            android:id="@+id/btnBack"
            android:layout_width="44dp"
            android:layout_height="44dp"
            android:src="@drawable/ic_left"
            android:background="@drawable/bg_circle_button"
            app:tint="@color/primary"
            android:padding="12dp"
            android:scaleType="centerInside"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/brandTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Blossy"
            android:textSize="36sp"
            android:layout_marginTop="39dp"
            android:fontFamily="@font/poppins_bold"
            android:textColor="@color/primary"
            android:layout_gravity="center_horizontal"
            app:layout_constraintTop_toBottomOf="@id/btnBack"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"/>

        <TextView
            android:id="@+id/welcomeText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Please Enter Your Email Address To \nRecieve a Verification Code"
            android:textSize="16sp"
            android:textColor="@color/black"
            android:fontFamily="@font/poppins_regular"
            android:layout_marginTop="8dp"
            android:gravity="center"
            app:layout_constraintTop_toBottomOf="@id/brandTitle"
            app:layout_constraintStart_toStartOf="@id/brandTitle"
            app:layout_constraintEnd_toEndOf="@id/brandTitle"/>

        <TextView
            android:id="@+id/emailTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Email Address"
            android:fontFamily="@font/poppins_bold"
            android:layout_marginTop="32dp"
            android:textSize="16sp"
            android:textColor="@color/black"
            app:layout_constraintTop_toBottomOf="@id/welcomeText"
            app:layout_constraintStart_toStartOf="parent"/>

        <androidx.appcompat.widget.AppCompatEditText
            android:id="@+id/emailText"
            android:layout_width="match_parent"
            android:layout_height="@dimen/edit_text_size"
            android:layout_marginTop="16dp"
            android:hint="Email Address"
            android:text="nguyendatpvdpqn@gmail.com"
            android:textSize="16sp"
            android:textColor="@color/black"
            android:background="@drawable/bg_edittext_primary"
            app:layout_constraintTop_toBottomOf="@+id/emailTitle"/>


        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/forgotPasswordButton"
            android:layout_width="match_parent"
            android:layout_height="54dp"
            android:background="@drawable/bg_button_primary"
            style="@style/Widget.AppCompat.Button"
            android:text="Continue"
            android:fontFamily="@font/poppins_bold"
            android:textSize="18sp"
            android:textAllCaps="false"
            android:textColor="@color/white"
            android:layout_marginTop="26dp"
            app:layout_constraintTop_toBottomOf="@+id/emailText"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"/>


    </androidx.constraintlayout.widget.ConstraintLayout>


</FrameLayout>